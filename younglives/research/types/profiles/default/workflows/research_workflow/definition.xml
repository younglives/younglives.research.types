<?xml version="1.0"?>
<dc-workflow workflow_id="research_workflow" title="research_workflow" description="- Essentially a workflow with no transitions, but has a Published state, so portlets and applications that expect that state will continue to work." state_variable="review_state" initial_state="planned" manager_bypass="False">
 <permission>Access contents information</permission>
 <permission>Change portal events</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <state state_id="completed" title="Completed">
  <description>Final draft has been accepted and is now ready for production</description>
  <exit-transition transition_id="refused"/>
  <exit-transition transition_id="produce"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="initial-draft" title="Being Drafted">
  <description>Paper is being drafted for the first time</description>
  <exit-transition transition_id="accept"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="draft" title="Draft">
  <description>Paper is being drafted in preparation for review</description>
  <exit-transition transition_id="internal-review"/>
  <exit-transition transition_id="journal-submission"/>
  <exit-transition transition_id="external-review"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="external-review" title="External review">
  <description>Paper is being externally reviewed</description>
  <exit-transition transition_id="complete"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="redraft"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="in-production" title="In production">
  <description>Paper is in production or being published externally</description>
  <exit-transition transition_id="refused"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="internal-review" title="Internal review">
  <description>Paper is being internally reviewed</description>
  <exit-transition transition_id="complete"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="redraft"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="journal-submission" title="Pending journal submission">
  <description>Paper is being prepared prior to submit to a journal</description>
  <exit-transition transition_id="journal-submission"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="redraft"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="journal-review" title="Pending journal review">
  <description>Paper is being peer-reviewed by a journal</description>
  <exit-transition transition_id="complete"/>
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="refused"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="planned" title="Planned">
  <description>Research idea is being prepared for a proposal</description>
  <exit-transition transition_id="accept"/>
  <exit-transition transition_id="accept_draft"/>
  <exit-transition transition_id="journal-review"/>
  <exit-transition transition_id="propose"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="proposed" title="Proposed">
  <description>Submitted proposal is under consideration</description>
  <exit-transition transition_id="journal-review"/>
  <exit-transition transition_id="reject"/>
  <exit-transition transition_id="accept"/>
  <exit-transition transition_id="accept_draft"/>
  <exit-transition transition_id="decline"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="published" title="Published">
  <description>Paper has been published</description>
 </state>
 <state state_id="rejected" title="Rejected">
  <description>Proposal has been rejected or withdrawn and will not proceed</description>
  <exit-transition transition_id="retrieve"/>
  <exit-transition transition_id="note"/>
 </state>
 <state state_id="unpublished" title="Unpublished">
  <description>Paper was declined for publication</description>
  <exit-transition transition_id="note"/>
 </state>
 <transition transition_id="accept" title="Accepted" new_state="draft" trigger="USER"
     before_script="" after_script="">
  <description>Proposal was accepted and starts the draft process</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=accept" category="workflow" icon="">Accept</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="accept_draft" title="Accepted for Draft" new_state="initial-draft" trigger="USER"
     before_script="" after_script="">
  <description>Proposal was accepted and starts the draft process</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=accept_draft" category="workflow" icon="">Accept</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="complete" title="Completed" new_state="completed" trigger="USER"
     before_script="" after_script="">
  <description>Paper was reviewed and accepted and is now ready for production for publication</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=complete" category="workflow" icon="">Complete</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="decline" title="Declined" new_state="planned" trigger="USER"
     before_script="" after_script="">
  <description>Paper was declined for publication</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=decline" category="workflow" icon="">Decline</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="external-review" title="External review" new_state="external-review" trigger="USER"
     before_script="" after_script="">
  <description>Research was submitted for an external review</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=external-review" category="workflow" icon="">External Review</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="internal-review" title="Internal review" new_state="internal-review" trigger="USER"
     before_script="" after_script="">
  <description>Paper submitted undergoing an internal review</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=internal-review" category="workflow" icon="">Internal Review</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="note" title="Add Note" new_state="" trigger="USER"
     before_script="" after_script="">
  <description>Add a note, and also update the deadline if required</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=note" category="workflow" icon="">Add Note</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="journal-submission" title="Pending Journal Submission" new_state="journal-submission" trigger="USER"
     before_script="" after_script="">
  <description>Paper being prepared before submitting to a journal</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=journal-submission" category="workflow" icon="">Journal Review</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="journal-review" title="Pending Journal Review" new_state="journal-review" trigger="USER"
     before_script="" after_script="">
  <description>Paper submitted to journal undergoing a peer review</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=journal-review" category="workflow" icon="">Journal Review</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="produce" title="In production" new_state="in-production" trigger="USER"
     before_script="" after_script="">
  <description>Paper is complete and now in production</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=produce" category="workflow" icon="">Produce</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="propose" title="Proposed" new_state="proposed" trigger="USER"
     before_script="" after_script="">
  <description>Proposal has been submitted for consideration</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=propose" category="workflow" icon="">Propose</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="publish" title="Published" new_state="published" trigger="USER"
     before_script="" after_script="">
  <description>Paper has been published</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=publish" category="workflow" icon="">Publish</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="redraft" title="Redraft" new_state="draft" trigger="USER"
     before_script="" after_script="">
  <description>Research was reviewed and a redraft has been requested</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=redraft" category="workflow" icon="">Redraft</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="refused" title="Refused" new_state="unpublished" trigger="USER"
     before_script="" after_script="">
  <description>Paper was declined for publication</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=refused" category="workflow" icon="">Refused</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="reject" title="Rejected" new_state="rejected" trigger="USER"
     before_script="" after_script="">
  <description>Paper was rejected at some point in the process</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=reject" category="workflow" icon="">Reject</action>
  <guard>
  </guard>
 </transition>
 <transition transition_id="retrieve" title="Reactivated" new_state="planned" trigger="USER"
     before_script="" after_script="">
  <description>A previously rejected or withdrawn proposal or paper was reactivated</description>
  <action url="%(content_url)s/workflow_transition_form?workflow_action=retrieve" category="workflow" icon="">Retrieve</action>
  <guard>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
